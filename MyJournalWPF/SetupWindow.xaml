<Window x:Class="MyJournalWPF.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyJournal - Initial Setup" Height="600" Width="500"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Border Margin="30" Background="{StaticResource SurfaceBrush}" 
            CornerRadius="10" Padding="30">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="3" BlurRadius="15" Opacity="0.3" Color="#000000"/>
        </Border.Effect>
        <StackPanel>
            <TextBlock Text="Welcome to MyJournal" 
                       FontSize="28" FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock Text="Create Your Master Password" 
                       FontSize="16" FontWeight="SemiBold" 
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Confirm Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Padding="10" Margin="0,0,0,20"/>

            <TextBlock Text="Scan QR Code with Authenticator App" 
                       FontSize="14" FontWeight="SemiBold" 
                       Foreground="{StaticResource TextBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Border BorderBrush="#BDC3C7" BorderThickness="2" 
                    CornerRadius="8" Padding="10" 
                    HorizontalAlignment="Center" Background="White">
                <Image x:Name="QrCodeImage" Width="200" Height="200"/>
            </Border>

            <TextBlock Text="Use Google Authenticator, Authy, or similar apps" 
                       FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,10,0,20"
                       TextWrapping="Wrap" TextAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Complete Setup" Click="CompleteSetup_Click" 
                        Style="{StaticResource ModernButtonStyle}" 
                        Padding="30,12" Margin="0,0,10,0"/>
                <Button Content="Cancel" Click="Cancel_Click" 
                        Background="#95A5A6" Foreground="White"
                        Style="{StaticResource ModernButtonStyle}" 
                        Padding="30,12"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
