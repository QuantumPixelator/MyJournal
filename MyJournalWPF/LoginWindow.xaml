<Window x:Class="MyJournalWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyJournal - Login" Height="400" Width="450"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Border Margin="30" Background="{StaticResource SurfaceBrush}" 
            CornerRadius="10" Padding="40">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="3" BlurRadius="15" Opacity="0.3" Color="#000000"/>
        </Border.Effect>
        <StackPanel>
            <TextBlock Text="MyJournal" 
                       FontSize="32" FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            
            <TextBlock Text="Secure Personal Journal" 
                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Master Password" Margin="0,0,0,8" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" 
                         Padding="12" Margin="0,0,0,20"
                         FontSize="14" BorderBrush="#BDC3C7" BorderThickness="1">
                <PasswordBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </PasswordBox.Resources>
            </PasswordBox>

            <TextBlock Text="Authenticator Code" Margin="0,0,0,8" FontWeight="SemiBold"/>
            <TextBox x:Name="TotpCodeBox" 
                     Padding="12" Margin="0,0,0,30"
                     FontSize="14" BorderBrush="#BDC3C7" BorderThickness="1"
                     MaxLength="6">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button Content="Login" Click="Login_Click" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Padding="0,12" FontSize="16" Margin="0,0,0,10"/>
            
            <Button Content="Cancel" Click="Cancel_Click" 
                    Background="#95A5A6" Foreground="White"
                    Style="{StaticResource ModernButtonStyle}" 
                    Padding="0,10" FontSize="14"/>
            
            <TextBlock x:Name="ErrorTextBlock" 
                       Text="" Foreground="#E74C3C" 
                       FontSize="12" Margin="0,15,0,0" 
                       TextWrapping="Wrap" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
