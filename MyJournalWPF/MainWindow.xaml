<Window x:Class="MyJournalWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MyJournal - Modern WPF Edition" Height="800" Width="1400"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Padding="5" Background="{StaticResource SurfaceBrush}">
            <MenuItem Header="_File">
                <MenuItem Header="_New Entry" Click="NewEntry_Click" InputGestureText="Ctrl+N"/>
                <MenuItem Header="_Save Entry" Click="SaveEntry_Click" InputGestureText="Ctrl+S"/>
                <MenuItem Header="_Delete Entry" Click="DeleteEntry_Click"/>
                <Separator/>
                <MenuItem Header="_Export to HTML" Click="ExportEntry_Click"/>
                <MenuItem Header="_Backup Database" Click="BackupDatabase_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Settings" Click="Settings_Click"/>
        </Menu>

        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top" Background="{StaticResource SurfaceBrush}" Padding="5">
            <Button Content="New Entry" Style="{StaticResource ModernButtonStyle}" Click="NewEntry_Click" Margin="0,0,5,0"/>
            <Separator/>
            
            <!-- Font Controls -->
            <Label Content="Font:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox x:Name="FontFamilyComboBox" Width="150" SelectionChanged="FontFamily_Changed" VerticalAlignment="Center"/>
            
            <Label Content="Size:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox x:Name="FontSizeComboBox" Width="60" SelectionChanged="FontSize_Changed" VerticalAlignment="Center">
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="12" IsSelected="True"/>
                <ComboBoxItem Content="14"/>
                <ComboBoxItem Content="16"/>
                <ComboBoxItem Content="18"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="24"/>
                <ComboBoxItem Content="28"/>
                <ComboBoxItem Content="36"/>
            </ComboBox>
            
            <Separator/>
            
            <!-- Formatting Buttons -->
            <ToggleButton x:Name="BoldButton" Content="B" FontWeight="Bold" Width="30" Click="Bold_Click" Style="{StaticResource IconButtonStyle}"/>
            <ToggleButton x:Name="ItalicButton" Content="I" FontStyle="Italic" Width="30" Click="Italic_Click" Style="{StaticResource IconButtonStyle}"/>
            <ToggleButton x:Name="UnderlineButton" Content="U" Width="30" Click="Underline_Click" Style="{StaticResource IconButtonStyle}">
                <ToggleButton.Content>
                    <TextBlock Text="U" TextDecorations="Underline"/>
                </ToggleButton.Content>
            </ToggleButton>
            
            <Separator/>
            <Button Content="Color" Click="Color_Click" Style="{StaticResource IconButtonStyle}" Width="Auto" Padding="8,4"/>
            <Button Content="Insert Image" Click="InsertImage_Click" Style="{StaticResource IconButtonStyle}" Width="Auto" Padding="8,4"/>
        </ToolBar>

        <!-- Main Content Grid -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" Padding="10" Effect="{DynamicResource DropShadow}">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.2" Color="#000000"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Calendar -->
                    <TextBlock Text="Calendar" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" 
                               Foreground="{StaticResource TextBrush}"/>
                    <Calendar Grid.Row="1" x:Name="EntryCalendar" Margin="0,0,0,10" 
                              SelectedDatesChanged="Calendar_SelectedDatesChanged"
                              Background="White" BorderBrush="#BDC3C7" BorderThickness="1"/>

                    <!-- Entry List -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Entries" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,10"
                                   Foreground="{StaticResource TextBrush}"/>
                        <ListBox Grid.Row="1" x:Name="EntriesListBox" 
                                 SelectionChanged="EntriesListBox_SelectionChanged"
                                 Background="White" BorderBrush="#BDC3C7" BorderThickness="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="13"/>
                                        <TextBlock Text="{Binding Date, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                                   FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <!-- Search -->
                    <TextBox Grid.Row="3" x:Name="SearchTextBox" 
                             Margin="0,10,0,0"
                             Style="{StaticResource ModernTextBoxStyle}"
                             TextChanged="Search_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </TextBox.Resources>
                        <TextBox.Tag>
                            <TextBlock Text="Search entries..." Foreground="#95A5A6" IsHitTestVisible="False" Margin="10,8"/>
                        </TextBox.Tag>
                    </TextBox>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Right Panel - Editor -->
            <Border Grid.Column="2" Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" Padding="15" Effect="{DynamicResource DropShadow}">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.2" Color="#000000"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBox x:Name="TitleTextBox" 
                             FontSize="20" FontWeight="SemiBold"
                             BorderThickness="0,0,0,2" BorderBrush="#BDC3C7"
                             Background="Transparent" Padding="5"
                             Margin="0,0,0,10">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="0"/>
                            </Style>
                        </TextBox.Resources>
                        <TextBox.Tag>
                            <TextBlock Text="Entry Title..." Foreground="#95A5A6" IsHitTestVisible="False" Margin="5,2"/>
                        </TextBox.Tag>
                    </TextBox>

                    <!-- Rich Text Editor -->
                    <RichTextBox Grid.Row="1" x:Name="ContentRichTextBox"
                                 Style="{StaticResource ModernRichTextBoxStyle}"
                                 VerticalScrollBarVisibility="Auto"
                                 AcceptsReturn="True" AcceptsTab="True"
                                 Margin="0,0,0,10"
                                 SelectionChanged="ContentRichTextBox_SelectionChanged">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="Start writing your journal entry here..."/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>

                    <!-- Tags and Attachments -->
                    <Grid Grid.Row="2" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Tags:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1" x:Name="TagsTextBox" Style="{StaticResource ModernTextBoxStyle}"/>
                        <Button Grid.Column="2" Content="Attach File" Click="AttachFile_Click" 
                                Style="{StaticResource ModernButtonStyle}" Margin="10,0,0,0"/>
                    </Grid>

                    <!-- Attachments List -->
                    <ListBox Grid.Row="3" x:Name="AttachmentsListBox" MaxHeight="80" Margin="0,0,0,10"
                             Background="White" BorderBrush="#BDC3C7" BorderThickness="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FileName}" Margin="3"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Save Entry" Click="SaveEntry_Click" 
                                Style="{StaticResource ModernButtonStyle}" Margin="0,0,10,0" Padding="20,10"/>
                        <Button Content="Discard Changes" Click="DiscardChanges_Click" 
                                Background="#E74C3C" Foreground="White" 
                                Style="{StaticResource ModernButtonStyle}" Padding="20,10">
                            <Button.Resources>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                    <Setter Property="Background" Value="#E74C3C"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C0392B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
