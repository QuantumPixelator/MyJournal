<Window x:Class="MyJournalWPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="500" Width="600"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    <Border Margin="20" Background="{StaticResource SurfaceBrush}" 
            CornerRadius="8" Padding="25">
        <StackPanel>
            <TextBlock Text="Application Settings" 
                       FontSize="24" FontWeight="SemiBold" 
                       Foreground="{StaticResource PrimaryBrush}"
                       Margin="0,0,0,20"/>

            <!-- Theme Settings -->
            <GroupBox Header="Theme" Margin="0,0,0,15" Padding="15">
                <StackPanel>
                    <RadioButton Content="Light Theme" IsChecked="True" Margin="0,5"/>
                    <RadioButton Content="Dark Theme" Margin="0,5"/>
                    <RadioButton Content="Auto (System)" Margin="0,5"/>
                </StackPanel>
            </GroupBox>

            <!-- Font Settings -->
            <GroupBox Header="Default Font" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Font Family:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" Margin="0,0,10,0" SelectedIndex="0">
                        <ComboBoxItem Content="Segoe UI"/>
                        <ComboBoxItem Content="Calibri"/>
                        <ComboBoxItem Content="Arial"/>
                        <ComboBoxItem Content="Times New Roman"/>
                    </ComboBox>

                    <TextBlock Grid.Column="2" Text="Size:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="3" SelectedIndex="2">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="11"/>
                        <ComboBoxItem Content="12"/>
                        <ComboBoxItem Content="14"/>
                        <ComboBoxItem Content="16"/>
                    </ComboBox>
                </Grid>
            </GroupBox>

            <!-- Auto-save Settings -->
            <GroupBox Header="Auto-save" Margin="0,0,0,15" Padding="15">
                <StackPanel>
                    <CheckBox Content="Enable auto-save" IsChecked="True" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Auto-save interval:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox SelectedIndex="1" Width="100">
                            <ComboBoxItem Content="15 seconds"/>
                            <ComboBoxItem Content="30 seconds"/>
                            <ComboBoxItem Content="1 minute"/>
                            <ComboBoxItem Content="2 minutes"/>
                            <ComboBoxItem Content="5 minutes"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Security Settings -->
            <GroupBox Header="Security" Margin="0,0,0,20" Padding="15">
                <StackPanel>
                    <CheckBox Content="Lock after 15 minutes of inactivity" Margin="0,5"/>
                    <CheckBox Content="Clear clipboard after copy" Margin="0,5"/>
                </StackPanel>
            </GroupBox>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Click="Save_Click" 
                        Style="{StaticResource ModernButtonStyle}" 
                        Padding="25,10" Margin="0,0,10,0"/>
                <Button Content="Cancel" Click="Cancel_Click" 
                        Background="#95A5A6" Foreground="White"
                        Style="{StaticResource ModernButtonStyle}" 
                        Padding="25,10"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
